@{
    ViewData["Title"] = "Oven";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/oven.css" />

<div class="oven-game">

    <!-- LEFT: OVEN -->
    <div class="oven-side">
        <h1>Baking...</h1>

        <div class="oven-box">
            <div class="oven-door">
                <div class="oven-glass"></div>
            </div>

            <div class="fire">
                <span></span><span></span><span></span>
            </div>

            <div class="heat"></div>
        </div>
    </div>

    <!-- RIGHT: GAME -->
    <div class="control-side">
        <h2>Pick baking time</h2>

        <div class="time-buttons">
            <button data-time="5">5 min</button>
            <button data-time="7">7 min</button>
            <button data-time="10">10 min</button>
        </div>

        <p class="timer">⏱ Time: <span id="time">--</span></p>

        <p class="result" id="result"></p>

        <button class="done-btn hidden" onclick="goMenu()">Next</button>
    </div>

</div>

<script src="~/js/oven.js"></script>

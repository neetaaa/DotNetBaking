@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Your Cake Inbox 🍰</title>
    <link rel="stylesheet" href="/css/inbox.css" />
</head>
<body>

    <div class="inbox-wrapper">

        <header class="inbox-header">
            <h1>🍰 Cake Inbox</h1>
            <p>Send sweet slices to your friends</p>
        </header>

        <div class="send-box">
            <h3>🍰 Send a slice</h3>

            <select id="toUserId">
                <option value="">Choose a friend</option>
            </select>

            <textarea id="messageText" placeholder="Write a sweet message..."></textarea>

            <button id="sendBtn">Send Slice 🍰</button>
        </div>

        <div id="messagesList" class="messages-list"></div>

    </div>

    <script src="~/js/inbox.js"></script>
</body>
</html>
